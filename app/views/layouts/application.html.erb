<!DOCTYPE html>
<html>
  <head>
    <title>LeglessListings</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <p>
      <%= link_to "Login", user_session_path unless user_signed_in? || current_page?(user_session_path) %>
    </p>
    <p>
      <%= link_to "Logout", destroy_user_session_path, method: :delete if user_signed_in? %>
    </p>
    <p>
      <%= link_to "Browse Listings", listings_path unless current_page?(listings_path) %>
    </p>
    <%= yield %>
    <% p request.env['PATH_INFO'] %>
  </body>
</html>